<% if object.errors.any? %>
  <div id="error_explanation">
    <p><%= pluralize(object.errors.count, "problem") %>
        prevented <%= object.class.to_s.underscore.humanize.downcase %>
	from being saved:<p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
