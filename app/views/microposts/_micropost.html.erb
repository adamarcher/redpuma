<tr>
  <td class="micropost">
    <span class="description"><%= micropost.description %></span>
    <span class="score"><%= micropost.score %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(micropost.user) %>
  <td>
    <%= link_to "delete", micropost, :method => :delete,
				     :confirm => "You sure?",
				     :title => micropost.description %>
  </td>
  <% end %>
</tr>
